
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>username</th>
    <th>gifts</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.gifts.count %></td>
      <td><%= link_to 'Show', user %></td>
    </tr>
  <% end %>
  </tbody>
</table>