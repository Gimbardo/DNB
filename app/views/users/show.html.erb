<h1><%= @user.email %></h1>

<table>
  <thead>
  <tr>
    <th>Who</th>
    <th>What</th>
    <th>Why</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.gifts.each do |gift| %>
    <tr>
      <td><%= gift.who.content %></td>
      <td><%= gift.what.content %></td>
      <td><%= gift.why.content %></td>
      <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
